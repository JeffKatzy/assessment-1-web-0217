<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit a User</title>
  </head>
  <body>
    <h1>Edit a User</h1>
    <div class="">
      <form class="" action="/users/<%= @user.id %>" method="post">
      <p>
        <label for='un'>Username:</label>
        <input type="text" name="name" id='un' value="<%= @user.name %>">
      </p>
      <p>
        <label for='ht'>Hometown:</label>
        <input type="text" name="hometown" id='ht' value="<%= @user.hometown %>">
      </p>
      <p>
        <input type="submit" value="Create User">
      </p>
      </form>
    </div>
    <div>
      <form class="" action="/users/<%= @user.id %>" method="delete">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" name="delete" value="DELETE">
      </form>
    </div>
  </body>
</html>
